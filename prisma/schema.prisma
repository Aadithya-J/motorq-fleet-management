generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  vin                Int                    @id @default(autoincrement())
  manufacturer       String
  model              String
  fleetID            FleetType              @default(PERSONAL)
  registrationStatus RegistrationStatusType @default(ACTIVE)
  telemtries         Telemetry[]
}

model Telemetry {
  id              Int              @id @default(autoincrement())
  vehicleVin      Int
  latitude        String
  longitude       String
  speed           Float
  engineStatus    EngineStatusType
  fuelPercentage  Float
  odometerReading Int
  errorCode       String
  timestamp       DateTime
  vehicle         Vehicle          @relation(fields: [vehicleVin], references: [vin])

  @@index([vehicleVin])
}

enum FleetType {
  CORPORATE
  RENTAL
  PERSONAL
}

enum RegistrationStatusType {
  ACTIVE
  MAINTENANCE
  DECOMISSIONED
}

enum EngineStatusType {
  ON
  OFF
  IDLE
}
